<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="80dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="#636B95">

        <TextView
            android:id="@+id/task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Recycler View"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textSize="24sp" />



        <TextView
            android:id="@+id/task_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Recycler View with card View"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#BF736D"
            android:textSize="18sp" />


    </LinearLayout>
</androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="#636B95">
        <TextView
            android:id="@+id/task_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Buy Some SAMPLES"

            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/task_detail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Make sure they are fresh!"

            android:textColor="#52B3BF"
            android:textSize="18sp" />

    </LinearLayout>


</androidx.cardview.widget.CardView>

</LinearLayout>

